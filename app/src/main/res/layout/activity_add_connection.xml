<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddConnection">

    <Button
            android:text="test connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/test" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/save"
            android:onClick="testConn"/>
    <TextView
            android:text="time out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textSize="20dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"/>
    <TextView
            android:text="password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textSize="20dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="Host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textSize="20dp"/>
    <EditText
            android:layout_width="700px"
            android:layout_height="130px"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pwd"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="700px"
            android:layout_height="130px"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/host" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="@+id/textView"
            android:text="192.168.1.101"/>
    <TextView
            android:text="save name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textSize="20dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <EditText
            android:layout_width="700px"
            android:layout_height="130px"
            android:inputType="textPersonName"
            android:text="new connection"
            android:ems="10"
            android:id="@+id/saveName" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="@+id/textView5"
            android:textAlignment="viewStart"/>
    <Button
            android:text="save connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="saveConn"/>
    <EditText
            android:layout_width="700px"
            android:layout_height="130px"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/timeOut" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="@+id/textView8"
            android:text="3000"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/connStatus" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/test" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="user name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="48dp"/>
    <EditText
            android:layout_width="700px"
            android:layout_height="130px"
            android:inputType="textPersonName"
            android:text="root"
            android:ems="10"
            android:id="@+id/userName"
            app:layout_constraintBottom_toBottomOf="@+id/textView2" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/textView7" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <EditText
            android:layout_width="700px"
            android:layout_height="130px"
            android:inputType="number"
            android:ems="10"
            tools:layout_editor_absoluteY="446dp" android:id="@+id/port" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/textView7" android:layout_marginEnd="16dp"/>
</android.support.constraint.ConstraintLayout>