<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ManageConnection">

    <Button
            android:text="connect"
            android:layout_width="420px"
            android:layout_height="wrap_content"
            android:id="@+id/conn" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/save"
            android:onClick="connect"/>
    <TextView
            android:text="time out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="20sp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" android:textSize="20sp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/textView2"/>
    <TextView
            android:text="Host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textSize="20sp"/>
    <EditText
            android:layout_width="700px"
            android:layout_height="130px"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pwd"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="700px"
            android:layout_height="130px"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/host"
            android:text="192.168.1.101" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/textView"/>
    <Button
            android:text="save connection"
            android:layout_width="420px"
            android:layout_height="wrap_content"
            android:id="@+id/save" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:onClick="save"/>
    <EditText
            android:layout_width="700px"
            android:layout_height="130px"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/timeOut" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="@+id/textView8"
            android:text="3000"/>
    <TextView
            android:text="user name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="48dp"/>
    <EditText
            android:layout_width="700px"
            android:layout_height="130px"
            android:inputType="textPersonName"
            android:text="root"
            android:ems="10"
            android:id="@+id/userName"
            app:layout_constraintBottom_toBottomOf="@+id/textView2" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connTitle" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"/>
    <TextView
            android:text="port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/textView7" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <EditText
            android:layout_width="700px"
            android:layout_height="130px"
            android:inputType="number"
            android:ems="10"
            tools:layout_editor_absoluteY="446dp" android:id="@+id/port" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/textView7" android:layout_marginEnd="16dp"/>
</android.support.constraint.ConstraintLayout>